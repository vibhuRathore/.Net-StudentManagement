@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <title>StudentManagement</title>
    <link href="~/assets/css/Style.css" rel="stylesheet" />
</head>

<body id="homeBody">
    <div id="homeContainer">
        <h2 id="homeHeading">Welcome to Your Student Management Portal</h2>
        <p style="margin-top:1rem;">
            "Student Management System (SMS) is a solution tool that is designed to track, maintain and manage
            all the data generated by a School, including the grades of a student, their attendance, their interpersonal
            activities records, etc.,"
        </p>
        <div id="btnWrapper">
            <div id="loginBtnWrapper">
                <p class="subHeading" id="HomePara"> Already a member ? Proceed with login form.</p>
                <button class="homebtns" onclick="afterHomeLogin()">Login</button>
            </div>
            <div id="signUpBtnWrapper">
                <p class="subHeading" id="HomePara">New Here ? Please proceed with SignUp form.</p>
                <button class="homebtns" onclick="afterHomeSignUp()">SignUp</button>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="~/assets/JS/HomeJs.js"></script>
</body>
</html>